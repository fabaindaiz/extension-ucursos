{
    "name": "tU-Cursos",
    "version": "1.1.0",
    "manifest_version": 3,
    "permissions": [
        "storage",
        "webNavigation"
    ],
    "content_scripts": [
        {
            "matches": [
                "*://*.u-cursos.cl/ingenieria/2/foro_institucion/*",
                "*://www.u-cursos.cl/ingenieria/*/*/*/*/foro/*",
                "*://www.u-cursos.cl/ingenieria/*/*/*/*/grupos/*/*/foro/*",
                "*://www.u-cursos.cl/uchile/4/foro_institucion/*",
                "*://www.u-cursos.cl/uchile/*/0/*/1/foro/"
            ],
            "js": [
                "js/hate-api.js"
            ],
            "run_at": "document_end"
        }
    ],
    "background": {
        "service_worker": "js/background-settings.js"
    },
    "action": {
        "default_popup": "html/menu.html",
        "default_title": "tU-Cursos"
    },
    "icons": {
        "16": "icon16.png",
        "48": "icon48.png",
       "128": "icon128.png" 
    }
}
